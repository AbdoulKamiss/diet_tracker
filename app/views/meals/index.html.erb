<div id="container_p">
  <div class="container">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <h1 style="text-align: center; padding-top: 40px;">Meals Index Page</h1>
    <div class="row d-flex justify-content-center">
          <% @meals.each do |meal| %>
            <div class="d-flex justify-content-center col-7 border border-success rounded my-2">
              <div class="col-5"><p style="font-size: 30px"><%= meal.name %></p></div>
              <div class="col-2"><%= link_to "", meal_path(meal), class:"bi bi-plus-circle", id:"plus" %></div>
            </div>  
          <% end %>
    </div>  
  </div>  
</div>