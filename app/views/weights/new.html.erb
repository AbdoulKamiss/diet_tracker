<div id="container_p">
  <div class="container">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <h1 style="text-align: center; padding-top: 40px;">New Weight Page</h1>
    <div class="row d-flex justify-content-center">
      <div class="col-6">
        <%= form_with(model: @weight, local: true) do |form| %>
          <% if @weight.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@weight.errors.count, "error") %> prohibited this weight from being saved:</h2>

              <ul>
              <% @weight.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <form>
            <div class="form-group">
              <%= form.label :name %></br>
              <%= form.text_field :name, class:"input" %>
            </div>

            <div class="form-group">
              <%= form.label :monday %></br>
              <%= form.text_field :monday, class:"input" %>
            </div>
            
            <div class="form-group">
              <%= form.label :tuesday %></br>
              <%= form.text_field :tuesday, class:"input" %>
            </div>

            <div class="form-group">
              <%= form.label :wednesday %></br>
              <%= form.text_field :wednesday, class:"input" %>
            </div>

            <div class="form-group">
              <%= form.label :thursday %></br>
              <%= form.text_field :thursday, class:"input" %>
            </div>

            <div class="form-group">
              <%= form.label :friday %></br>
              <%= form.text_field :friday, class:"input" %>
            </div>

            <div class="form-group">
              <%= form.label :saturday %></br>
              <%= form.text_field :saturday, class:"input" %>
            </div>

            <div class="form-group">
              <%= form.label :sunday %></br>
              <%= form.text_field :sunday, class:"input" %>
            </div>
            <div class="actions">
              <%= form.submit "Create Weight", id: "create-weight", class:"btn btn-outline-success my-2" %>
            </div>
          </form>
          <% end %>
      </div>  
    </div>
    <div class="d-flex justify-content-center"><%= link_to 'Back', weights_path, id: "back", class:"btn btn-outline-dark my-4" %></div>
  </div>  
</div>