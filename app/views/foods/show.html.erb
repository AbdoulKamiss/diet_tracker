<div id="container_p">
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Show Food Page</h1>

<h2><%= @food.name %></h2>
<h3>Per 100g</h3>
<p>Calories: <%= @food.calories %> Kcal</p>
<p>Protein: <%= @food.protein %> g</p>
<p>Carbohydrates: <%= @food.carbohydrates %> g</p>
<p>Fat: <%= @food.fat %> g</p>

<%= link_to 'Edit', edit_food_path(@food), id: "edit-task" %> |
<%= link_to 'Back', foods_path, id: "back" %>
</div>